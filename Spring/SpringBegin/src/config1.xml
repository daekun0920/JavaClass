<?xml version="1.0" encoding="UTF-8"?>

<!--  config01.xml -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	
	<!-- 
		스프링을 통해서 보게 되는 업무
		1. 객체 생성
		2. 객체 관리
		3. 객체 소멸
		4. 객체간의 관계 맺기
	-->
	<!-- Ex05가 Student 객체가 필요 <- 스프링이 제공하기 위해서 <- <bean>이 설정되어 있어야 한다. -->
	<bean id = "student" class = "com.test.spring.Ex05_Student"></bean>
	
	<!-- new Student("아무개", 22) -->
	<!-- 생성자를 사용해서 객체(bean) 초기화 -->
	<bean id = "student2" class = "com.test.spring.Ex05_Student">
		<!-- 스프링이 빈을 만들 때 생성자 매개변수를 전달하면서 생성 -->
		<!-- <constructor-arg value = "아무개"></constructor-arg> -->
		<!-- <constructor-arg value = "22"></constructor-arg> -->
		
		<!-- 
		스프링이 빈을 만들때 setter를 호출하면서 생성 
		name="name" -> setName() 호출
		age="age" -> setAge() 호출
		-->
		<property name = "name" value = "하하하"></property>
		<property name = "age" value = "22"></property>
	</bean>
	
	
	<!-- 
	
	식별자
	1. id : 절대 식별자, 기능에 따른 객관적 명칭
	2. name : 상황 식별자, 상황에 따른 역할의 명칭
	
	식별자
	1. 홍길동
	2. 아빠, 과장님, 홍과장, 먹보
	
	-->
	<bean id = "hoho" name = "father, hong, dog, cat, supporter" class = "com.test.spring.Ex05_Student">
		<property name="name" value = "호호호"></property>
		<property name="age" value = "40"></property>
	</bean>
	
	
</beans>